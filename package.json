{
  "name": "cli-monorepo",
  "description": "Tools and packages used to power the Particle CLI",
  "version": "1.0.0",
  "author": "Particle Industries, Inc",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && lerna run test",
    "test:ci": "npm run lint && lerna run test:ci",
    "test:unit": "lerna run test:unit",
    "test:unit:ci": "lerna run test:unit:ci",
    "test:unit:watch": "lerna run test:unit:watch",
    "test:integration": "lerna run test:integration",
    "test:integration:ci": "lerna run test:integration:ci",
    "test:integration:watch": "lerna run test:integration:watch",
    "test:e2e": "lerna run test:e2e -- -- ",
    "test:e2e:ci": "lerna run test:e2e:ci",
    "test:e2e:watch": "lerna run test:e2e:watch",
    "build": "lerna run compile",
    "clean": "lerna run clean",
    "clean:modules": "lerna run clean:modules",
    "todo": "git grep -e 'TODO (.*)' --ignore-case --heading --break --context=2 --full-name --line-number -- :^./package.json",
    "reinstall": "npm run clean:modules && npm run bootstrap"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/register": "^7.8.6",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-particle": "^2.2.1",
    "execa": "^4.0.0",
    "fs-extra": "^8.1.0",
    "github-api": "^3.3.0",
    "lerna": "^3.20.2",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0"
  }
}
